{% extends '/base.j2' %}


{% block head %}
    <h1>Delete entry in {{table_name}}</h1>
{% endblock %}

{% block body %}

<p>&nbsp;</p>
<div id="delete" style="display: block">
  <form id="delete{{table_name}}" action="/{{table_name}}/delete/{{items[0].id}}/" method="post"></form>
      
    <fieldset class="fields">
        <legend><strong>Are you sure you want to delete the following item in {{table_name}}?</strong></legend>
        {% for key in items[0].keys() %}
            <label> {{key}}: </label> "{{items[0][key]}}"<br>
        {% endfor %}
    </fieldset>

    <input type="submit" form="delete{{table_name}}" value="Delete" name="delete_{{table_name}}" class="btn btn-primary" style="margin:.5rem;">
    <a href="/{{table_name}}/"><input class="btn" type="button" value="Cancel"></a> 

  </form> 
</div><!-- delete -->

{% endblock %}
